<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_displacement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".ui.reports.DisplacementFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tv_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/ShopAddress"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spin_shops"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/fromShop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/sn"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ed_sn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:padding="10dp"
                android:gravity="start|top"
                android:hint="@string/PrintReportHint"
                android:textColorHint="@color/textHint"/>

            <TextView
                android:id="@+id/date_trans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/date_trans"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_first_date"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:layout_marginRight="5dp"
                    android:textColor="#000"
                    android:textSize="16sp"/>

                <ImageButton
                    android:id="@+id/btn_first_date"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_date_range_24"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/btn_text_size"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/tv_second_date"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:layout_marginRight="5dp"
                    android:textColor="#000"
                    android:textSize="16sp"/>

                <ImageButton
                    android:id="@+id/btn_second_date"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_date_range_24"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/btn_text_size"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>


            <EditText
                android:id="@+id/reportForm"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#fff"
                android:paddingLeft="10dp"
                android:gravity="start|top"
                android:hint="@string/ReportHint"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:textColorHint="@color/textHint" />

            <Button
                android:id="@+id/buttonForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/btn_form"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/btn_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonClear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/btn_margin"
                    android:text="@string/Clear"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/btn_text_size" />

                <Button
                    android:id="@+id/buttonSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/btn_margin"
                    android:text="@string/Send"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/btn_text_size" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>